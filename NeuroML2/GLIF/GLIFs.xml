                <StateAssignment variable="v" value="leakReversal + fv * (v - leakReversal) + deltaV"/>
                <StateAssignment variable="threshS" value="threshS + deltaThresh"/>
                <EventOut port="spike"/>
            </OnCondition>

        </Dynamics>

    </ComponentType>




</Lems>