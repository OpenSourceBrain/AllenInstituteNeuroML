# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation

target: LEMS_SomaTest.xml 
engine: jNeuroML
mep: ../NEURON/.test.mep
experiments:
  Current clamp:
    observables:
      spike times:
        file: 
          path: TestSoma.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 0.000240
  Ca:
    observables:
      spike times:
        file: 
          path: TestSoma.ca.dat
          columns: [0,1]
          scaling: [1000, 1]
        spike detection: 
          method: threshold
          threshold: 0.005
        tolerance: 0.000712
