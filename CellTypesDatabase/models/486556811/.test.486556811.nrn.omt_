# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation
#
#   NOTE: this requires a local copy of 486111901.nwb to pass!
#
#
target: test.py
engine: PyNEURON
mep: .test.486556811.mep
experiments:
  Current clamp:
    observables:
      spike times:
        file: 
          path: sweep_54.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -20
        tolerance: 0
